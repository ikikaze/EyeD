<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebf1"
    tools:context=".MainActivity">

    <ro.lockdowncode.eyedread.UI.MenuButton
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_bg"
        app:menu_button_image="@mipmap/search_pink"
        android:onClick="btnsClicked"
        app:menu_button_text="@string/strSearch"
        android:textColor="@color/colorEyeD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passlicense"
        app:layout_constraintVertical_bias="1.0" />

    <ro.lockdowncode.eyedread.UI.MenuButton
        android:id="@+id/btnID"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_bg"
        android:onClick="btnsClicked"
        android:padding="10dp"
        android:textColor="@color/colorBtnPink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConnect"
        app:layout_constraintVertical_bias="0.284"
        app:menu_button_image="@mipmap/idcard_pink"
        app:menu_button_text="@string/strID" />

    <ro.lockdowncode.eyedread.UI.MenuButton
        android:id="@+id/btnConnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_bg"
        app:menu_button_image="@mipmap/link_pink"
        android:onClick="btnsClicked"
        android:padding="3dp"
        android:paddingBottom="3dp"
        app:menu_button_text="@string/strConnect"
        android:textColor="@color/colorEyeD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/passlicense"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:minHeight="96dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btnSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnID"
        app:layout_constraintVertical_bias="1.0">

        <ro.lockdowncode.eyedread.UI.MenuButton
            android:id="@+id/btnPass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:onClick="btnsClicked"
            android:padding="7dp"
            android:textColor="@color/colorEyeD"
            app:menu_button_image="@mipmap/pass_pink"
            app:menu_button_text="@string/strPass" />

        <ro.lockdowncode.eyedread.UI.MenuButton
            android:id="@+id/btnLicense"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:onClick="btnsClicked"
            android:padding="7dp"
            android:textColor="@color/colorEyeD"
            app:menu_button_image="@mipmap/license_pink"
            app:menu_button_text="@string/strLicense" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>